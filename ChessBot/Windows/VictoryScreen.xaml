<Window x:Class="ChessBot.Windows.VictoryScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChessBot.Windows"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="VictoryScreen" Height="200" Width="300">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="tbWinnerDisplay" Text="White has won" TextAlignment="Center" FontSize="20" Height="30"/>
        <Button Grid.Row="1" x:Name="btnQuit" Width="200" Height="50" Content="Back to Main Menu" FontSize="20" HorizontalAlignment="Center" Click="btnQuit_Click"/>

    </Grid>
</Window>
