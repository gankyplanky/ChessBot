<Window x:Class="ChessBot.Windows.TeamChoice"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChessBot.Windows"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="TeamChoice" Height="200" Width="300">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock Text="Choose a Team" Width="100" Height="20" TextAlignment="Center"/>
        <Button Grid.Row="1" x:Name="btnWhite" Content="White" Width="100" Height="40" HorizontalAlignment="Left" Margin="30,0,0,0" Click="btnWhite_Click"/>
        <Button Grid.Row="1" x:Name="btnBlack" Content="Black" Width="100" Height="40" HorizontalAlignment="Right" Margin="0,0,30,0" Click="btnBlack_Click"/>

    </Grid>
</Window>
